<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div style="font-size:11px;color:#888">
		    Select intersection layer below, it will show as the top map layer.  You can
		    then click on any geometry contained in this layer.  A query of intersecting 
		    geometires will be preformed on all other visible layers.
		</div>
		
		<div class="row-fluid" style="margin:10px 0">
		    <div class="span6" style="text-align:center"><g:CheckBox ui:field="enable">Enable</g:CheckBox></div>
		    <div class="span6" style="text-align:center"><g:CheckBox ui:field="showLayer">Show Intersect Layer</g:CheckBox></div>
		</div>
		
		<div style="border-top:1px solid #ddd;font-size:16px;padding:10px 0">Select Intersect Layer</div>
		<g:SimplePanel ui:field="carouselRoot"></g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 